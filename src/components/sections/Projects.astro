---
import Section from "../Section.astro";

import { projects } from "cv.json";
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(( {url, description, name})=> {
                return (
                <li>
                    <article>
                        <header>
                            <a href={url} title={`Ver el proyecto ${name}`}>
                                <h3>{name}</h3>
                            </a>
                            <p>{description}</p>
                        </header>
                    </article>    
                </li>
                )
               
            })
        }
    </ul>

    <style>
        ul{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        article{
            border-radius: 8px;
            border: 1px solid #f2f2f2;
            gap: 16px;
            display: flex;
            flex-direction: column;
            padding: 16px;
            height: 100%;
        }

        article h3{
           margin-bottom: 4px;
        }

        article a{
            color: #111;
        }

        article a:hover{
            text-decoration: underline;
        }

        article p {
            font-size: 0.75rem;
            line-height: 1.2rem;
            padding-top: 0.2rem;
        }

    </style>
</Section>